<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/walpaper"
    tools:context=".Ajouter_Commandes">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:text="Détails Fournisseur"
        android:textColor="#FFEB3B"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/editNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Nom du fournisseur"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111"/>

    <EditText
        android:id="@+id/editEntre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="110dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Entreprise"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:textColor="#FFEB3B"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Details Clients"
        android:textSize="20dp"
        />


    <EditText
        android:id="@+id/editNomCli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="190dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Nom du client"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111" />

    <EditText
        android:id="@+id/editPrenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="240dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Prénom du client"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="290dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Email du client"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111" />


    <EditText
        android:id="@+id/editTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="340dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Téléphone du client"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="390dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Details Commandes"
        android:textColor="#FFEB3B"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/editNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="420dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="No de commande"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111" />

    <EditText
        android:id="@+id/editProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="470dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Nom du Produit"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111" />

    <EditText
        android:id="@+id/editPoids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="520dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Poids (en Kg)"
        android:textColorHint="#D3D3D3"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        android:textColor="#121111"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ajouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginTop="580dp"
            android:text="Ajouter" />

        <Button
            android:id="@+id/afficher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_marginLeft="20dp"
            android:background="#d3d3d3"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:layout_marginTop="580dp"
            android:text="Afficher" />

    </LinearLayout>
</FrameLayout>